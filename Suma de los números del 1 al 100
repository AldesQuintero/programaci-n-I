#include <stdio.h>
void main()
{
 double numero, sum = 0, i;
 printf("\n Introduzca numeros: ");
 scanf("%lf", &numero);
 for (i = 1; i <= numero; i++)
 {
 sum = sum + (1 / i);
 if (i == 1)
 printf("\n 1 +");
 else if (i == numero)
 printf(" (1 / %lf)", i);
 else
 printf(" (1 / %lf) + ", i);
 }
 printf("\n la suma de esta serie es %.2lf", sum);
}
