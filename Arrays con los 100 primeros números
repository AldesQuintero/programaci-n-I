#include<stdio.h>
int main()
{
int Size, i, a[10];
int Even_Sum = 0;
printf("\n Por favor, introduzca el tama√±o del array : ");
scanf("%d", &Size);
printf("\npor favor, introduzca los elementos array: \n");
for(i = 0; i < Size; i++)
{
 scanf("%d", &a[i]);
}

for(i = 0; i < Size; i ++)
{
 if(a[i] % 2 == 0)
 {
Even_Sum = Even_Sum + a[i];
 }

}

printf("\n La suma de los numeros pares en este array es = %d ", Even_Sum);
return 0;
}
